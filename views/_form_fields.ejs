<div class="form-group">
    <label for="title" class="form-label">Titulo</label>
    <textarea 
    type="text" 
    class="form-control" 
    id="title" 
    name = "title" 
    <%=article.title%>>
</textarea>
</div>
<div class="form-group">
    <label for="description" class="form-label">Descripcion</label>
    <textarea
    type="text" 
    class="form-control" 
    id="title" 
    name = "description"
    <%=article.description%>>
</textarea>
</div>
<div class="form-group">
    <label for="markdown" class="form-label">Resumen</label>
    <textarea 
    type="text" 
    class="form-control" 
    id="markdown" 
    name = "markdown">
        <%=article.markdown%>
    </textarea>  
</div>

<div class="mb-3">
    <label for="image" class="form-label">Seleccionar una imagen</label>
    <input class="form-control" type="file" id="image", name= "image" accept="image/*">
</div>
   
<button type="submit" class="btn btn-primary">Guardar</button>
